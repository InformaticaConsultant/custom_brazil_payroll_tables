<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hr_contract_view_form_inherit_payroll_br" model="ir.ui.view">
        <field name="name">hr.contract.form.inherit.payroll.br</field>
        <field name="model">hr.contract</field>
        <field name="inherit_id" ref="hr_contract.hr_contract_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form[1]/sheet[1]/notebook[1]/page[@name='information']/group[@name='salary_info']/group[@name='salary']/field[@name='wage']" position="after">
                <field name="horas_mes"/>
                <field name="salario_dia"/>
                <field name="salario_hora"/>
            </xpath>
        </field>
    </record>
</odoo>